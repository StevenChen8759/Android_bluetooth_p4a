BoxLayout:
    orientation: 'vertical'
    Label:
        id: stat
        text: 'Please get the bluetooth status first'

    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            orientation: 'horizontal'
            Button:
                text: 'Get BTH Status'
                on_release: app.getbthstat()
            Button:
                id: scanbutt
                disabled: True
                text: 'Scan BTH Devices'
                on_release: app.scanbthdevs()
#            Button:
#                id: getscanres
#                text: 'Get discovered \n BTH devices'

        BoxLayout:
            orientation: 'horizontal'

            Button:
                id: nptest
                on_release: app.nptest()
                text: 'run numpy testing script'

            Button:
                id: bgserv
                on_release: app.runserv()
                text: 'run background service'


<PopupInfoLayout>:
    FloatLayout:
        size: (400,400)

        Label:
            id: info
            text: "Testing..."
            size_hint: (.5,.25)
            pos: (20,20)

        Button:
            id: can
            text: "Back"
            size_hint: (.5,.25)
            pos: (200,200)
       
