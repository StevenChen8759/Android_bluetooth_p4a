BoxLayout:
    orientation: 'vertical'
    Label:
        id: stat
        text: 'Please get the bluetooth status first'

    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            orientation: 'horizontal'
            Button:
                text: 'Get BTH Status'
                on_release: app.getbthstat()
            Button:
                id: scanbutt
                disabled: True
                text: 'Scan BTH Devices'
                on_release: app.scanbthdevs()
            Button:
                id: getscanres
                text: 'Get discovered BTH devices'

        Button:
            id: nptest
            text: 'run numpy testing script'
